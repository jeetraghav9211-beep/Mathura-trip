  <script>
    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // About lazy-load (for 1,00,000 words external file)
    document.getElementById('loadAbout').addEventListener('click', async () => {
      const btn = document.getElementById('loadAbout');
      btn.textContent = 'Loading...'; btn.disabled = true;
      try{
        const res = await fetch('content/about-services.html'); // put your long content file here
        const html = await res.text();
        document.getElementById('aboutExcerpt').innerHTML = html;
      }catch(e){
        document.getElementById('aboutExcerpt').innerHTML = '<p>Could not load external content. Ensure <code>content/about-services.html</code> exists on your server.</p>';
      }
    });

    // Generate 50 client chips (duplicated for seamless marquee)
    const clientNames = Array.from({length:50}, (_,i)=>`Client ${i+1}`);
    const clientTrack = document.getElementById('clientTrack');
    const makeClientChip = (name) => {
      const el = document.createElement('div');
      el.className = 'chip logo-chip';
      el.innerHTML = `<span class="logo-dot"></span><span>${name}</span>`;
      return el;
    };
    // fill twice for infinite look
    [...clientNames, ...clientNames].forEach(n=> clientTrack.appendChild(makeClientChip(n)));

    // Generate 30+ reviews
    const sampleReviews = [
      'Super quick turnaround on bulk hiring.',
      'Quality profiles and great coordination.',
      'Clear communication, no surprises.',
      'Understood the JD and delivered.',
      'Good payroll compliance support.',
      'Flexible and professional team.',
      'Helped us scale our sales team.',
      'Great candidate experience.',
      'Reliable background checks.',
      'On-time payroll every month.',
      'Transparent and helpful.',
      'Excellent screening process.',
      'Strong domain understanding.',
      'Saved us weeks of effort.',
      'High offer-to-join ratio.',
      'Great follow-through post-offer.',
      'Data-driven hiring dashboards.',
      'Resolved queries quickly.',
      'Smooth onboarding support.',
      'Great at niche roles.',
      'Consistent quality delivery.',
      'Proactive sourcing approach.',
      'Strong vendor management.',
      'Superb candidate engagement.',
      'Accurate payroll calculations.',
      'Good statutory compliance.',
      'Helpful documentation support.',
      'Responsive on weekends too.',
      'They really care about results.',
      'Highly recommended partner.',
      'Trustworthy team to work with.'
    ];

    const reviewTrack = document.getElementById('reviewTrack');
    const makeReviewChip = (text, idx) => {
      const el = document.createElement('div');
      el.className = 'chip';
      el.textContent = `★ ${text}`;
      el.setAttribute('aria-label', `Review ${idx+1}`);
      return el;
    };
    [...sampleReviews, ...sampleReviews].forEach((t,i)=> reviewTrack.appendChild(makeReviewChip(t,i)));

    // Basic form enhancement: prevent double submit
    const preventDoubleSubmit = (formId) => {
      const form = document.getElementById(formId);
      if(!form) return;
      form.addEventListener('submit', () => {
        const btn = form.querySelector('button[type="submit"]');
        if(btn){ btn.disabled = true; btn.textContent = 'Submitting...'; }
      });
    };
    preventDoubleSubmit('resumeForm');
    preventDoubleSubmit('contactForm');
  </script>
